
<div class="container mt-4 mb-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <!-- Default form login -->
      <div class="card">
          <h5 class="card-header font-weight-bold default-color white-text text-center py-3">
              User Login
          </h5>
      <% include ./partials/messages %>
      <form class = "text-center border border-light px-5 pt-5 pb-3" action="/users/login" method="POST">
        <div class="card-body p-0">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Enter Email"
          />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Enter Password"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
